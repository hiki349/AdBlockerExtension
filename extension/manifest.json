{
  "name": "AdBlockerExtension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "webNavigation",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
